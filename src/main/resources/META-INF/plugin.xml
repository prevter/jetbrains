<idea-plugin>
    <id>org.geode-sdk.clion</id>
    <name>Geode</name>
    <vendor url="https://geode-sdk.org/">Geode Team</vendor>

    <description><![CDATA[
        <p>
            Support for <a href="https://docs.geode-sdk.org/">Geode</a>,
            the <a href="https://store.steampowered.com/app/322170/Geometry_Dash/">Geometry Dash</a>
            modding framework. Includes utilities for developing Geometry Dash mods in CLion.
        </p>
        <p>
            Requires the <a href="https://github.com/geode-sdk/geode">Geode SDK</a>
            and <a href="https://github.com/geode-sdk/cli">Geode CLI</a>.
        </p>
        <ul>
            <li>Validation for <code>mod.json</code></li>
            <li>Colorization for <code>FLAlertLayer</code> tags</li>
            <li>Inline color hints for <code>ccColor3B</code>, <code>ccColor4B</code>, <code>ccColor4F</code>, and <code>ccc3</code>/<code>ccc4</code></li>
            <li>Project template for creating Geode mods in a few clicks</li>
            <li>Inspections for common mistakes in mod development</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.compose</depends>
    <depends>com.intellij.modules.json</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.cpp-plugin-capable</depends>
    <depends>Git4Idea</depends>

    <resource-bundle>messages.InspectionsBundle</resource-bundle>

    <extensions defaultExtensionNs="JavaScript.JsonSchema">
        <ProviderFactory implementation="org.geodesdk.clion.ModSchemaProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <colorProvider implementation="org.geodesdk.clion.CCColorProvider"/>

        <annotator language="C++" implementationClass="org.geodesdk.clion.GDColorTagAnnotation"/>
        <annotator language="ObjectiveC" implementationClass="org.geodesdk.clion.GDColorTagAnnotation"/>
        <annotator language="Markdown" implementationClass="org.geodesdk.clion.GDColorTagAnnotation"/>

        <directoryProjectGenerator implementation="org.geodesdk.clion.newproject.GeodeProjectGenerator"/>

        <localInspection language="" bundle="messages.InspectionsBundle"
                         shortName="GeodeCout"
                         groupName="Geode SDK"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.geodesdk.clion.lint.GeodeCoutInspection"
                         key="inspection.geode.cout.display.name"/>
        <localInspection language="" bundle="messages.InspectionsBundle"
                         shortName="GeodeStoi"
                         groupName="Geode SDK"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="org.geodesdk.clion.lint.GeodeStoiInspection"
                         key="inspection.geode.stoi.display.name"/>
        <localInspection language="" bundle="messages.InspectionsBundle"
                         shortName="GeodeDynamicCast"
                         groupName="Geode SDK"
                         enabledByDefault="true"
                         level="ERROR"
                         implementationClass="org.geodesdk.clion.lint.GeodeDynamicCastInspection"
                         key="inspection.geode.dynamic_cast.display.name"/>
        <localInspection language="" bundle="messages.InspectionsBundle"
                         shortName="GeodeUnknownSetting"
                         groupName="Geode SDK"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.geodesdk.clion.lint.GeodeUnknownSettingInspection"
                         key="inspection.geode.unknown_setting.display.name"/>
        <localInspection language="" bundle="messages.InspectionsBundle"
                         shortName="GeodeSettingTypeMismatch"
                         groupName="Geode SDK"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.geodesdk.clion.lint.GeodeSettingTypeMismatchInspection"
                         key="inspection.geode.setting_type_mismatch.display.name"/>
    </extensions>
</idea-plugin>